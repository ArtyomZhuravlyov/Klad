<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Кладовая Алтая"]</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@

    @*<style>

        </style>*@

    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="~/css/Header_Background.css" />
    <link rel="stylesheet" href="~/css/Search.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

</head>
<body>
    <div class="ColorHeader">
        <!--меню-->
        
        <div class="GeneralHeader">
            <div class="ColorHeader posHeader">
                <div class="test_color">
                    <a href="~/Home/Main" class="ColourChange poseMain underline">ГЛАВНАЯ</a>
                    <a href="~/Home/Contact" class="ColourChange poseContact underline">КОНТАКТЫ</a>
                    <div class="divSearch">
                        <form class="formSearch">
                            <input type="text" placeholder="Искать здесь...">
                            <button type="submit"></button>
                        </form>
                    </div>
                </div>


            </div>
            
            <!--вторая полоса-->
            <div class="line_2">

            </div>
            <div>
                <nav class="positionNav">
                    <ul class="topmenu">
                        @foreach (var _category in Category.category)
                        {
                            <li>
                                <a href="/@_category.Key">@_category.Key</a>
                                <ul class="submenu">
                                    @foreach (var _category2 in _category.Value)
                                    {
                                        <li>  <a href="/@_category2 ">@_category2</a></li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
      

        <main class="backgroundbody">

            @*<table class="table-condensed">*@

            @*</table>*@
            <!--основной контент-->
            <div class="container body-content">
                @RenderBody()
            </div>
        </main>
                <div class="footer1">
                    © 2019 - Кладовая Алтая  @*<p>© 2019 - Кладовая Алтая</p>*@
                </div>
                @*<footer class="footer1">
                    <p>© 2019 - Кладовая Алтая</p>
                </footer>*@
            
    </div>
</body>
</html>