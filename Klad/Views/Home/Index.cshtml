    @*<div class="stars"></div>*@

    <div class="parent">
        @foreach (var product in Model.Products)
        {
            <div class="border">
                <div class="wrap">
                    <div class="product-wrap">
                        <a href=""><img src="~/images/@product.Category/@product.Category2/@product.Address"></a>
                    </div>
                    <div class="loop-action">
                        <a href="" class="add-to-cart">Быстрый просмотр</a>
                        <a href="" class="loop-add-to-cart">В корзину</a>
                    </div>
                </div>

                <div class="product-info">
                    <h3 class="product-title">@product.Name</h3>
                    <div class="price">&#8381; @product.Price </div>
                </div>
            </div>
        }
    </div>
    <div>
        <ul class="pagination modal-1">
            @foreach (var _page in Model.Pages)
            {
                @*<li class="liPages btn btn-default btn">
                <i>
                    <a href="/@Model.CurrentCategory/@_page"> @_page</a>
                </i>
            </li>*@

                @if (Model.PageViewModel.PageNumber == _page)
                { 
                    <li> <a href="/@Model.CurrentCategory/@_page" class="active">@_page</a></li>
                }
                else{
                <li> <a href="/@Model.CurrentCategory/@_page" >@_page</a></li>
                }
            }
        </ul>
    </div>


    @*//описание категорий внизу*@
    @foreach (var DicCatalogKey in Model.DiscriptionCatalog.Keys)
    {
        if (DicCatalogKey == Model.CurrentCategory)
        {
            foreach (var Value in Model.DiscriptionCatalog[DicCatalogKey])
            {
                <table class="table-condensed">
                    <tr>
                        <td>@Value.Key</td>
                    </tr>
                    <tr>
                        <td>@Value.Value</td>
                    </tr>
                </table>

            }
        }
    }


</body>
</html>